<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[DOMAIN] [%level] %date %logger{15} - %message%n%xException{5}</pattern>
        </encoder>
    </appender>

    <logger name="domain-core-test" level="INFO" />

    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>